{
  "name": "@ictrobot/c2wasm",
  "version": "0.0.3",
  "description": "C Compiler To WebAssembly",
  "main": "dist/c2wasm.js",
  "types": "src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ictrobot/c2wasm.git"
  },
  "author": {
    "name": "Ethan Jones",
    "email": "ictrobot@outlook.com",
    "url": "https://github.com/ictrobot/"
  },
  "license": "MIT",
  "scripts": {
    "test": "ts-node src/c_library/standard_library.ts && tsc && ava --timeout 1m",
    "parser": "jison src/parsing/c_grammar.jison -o src/parsing/gen/c_grammar.js --default-action=none,merge",
    "lint": "eslint .",
    "stdlib": "ts-node src/c_library/standard_library.ts",
    "build": "ts-node src/c_library/standard_library.ts && webpack"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@types/moo": "^0.5.3",
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "ava": "^3.13.0",
    "eslint": "^7.12.1",
    "html-webpack-plugin": "^4.5.0",
    "jison-gho": "^0.6.1-216",
    "lzutf8": "^0.5.6",
    "ts-loader": "^8.0.7",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "val-loader": "^2.1.2",
    "vis-network": "^9.0.0",
    "wabt": "^1.0.19",
    "wasm-feature-detect": "^1.2.9",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0"
  },
  "dependencies": {
    "moo": "^0.5.1"
  },
  "ava": {
    "files": [
      "tests/**/*",
      "!tests/benchmark",
      "!tests/**/index*"
    ],
    "require": [
      "source-map-support/register"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "build/src/",
        "tests/": "build/tests/"
      },
      "extensions": [
        "ts"
      ]
    },
    "nodeArguments": [
      "--experimental-wasm-bigint"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src/",
    "dist/*.js*"
  ]
}
